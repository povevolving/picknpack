<%
  require 'base64'
  require 'chunky_png'
  require 'barby'
  require 'barby/barcode/code_128'
  require 'barby/outputter/png_outputter'

  order_number_barcode = Barby::Code128B.new(order_number)
  order_number_barcode = Barby::PngOutputter.new(order_number_barcode).to_png(:ydim => 100, :height => 100)

  encoded_number = Base64.encode64(order_number_barcode)
%>

<html>
  <head>
    <style>
      div {
        margin-bottom: 10px;
        font-size: 20px;
        font-family: sans-serif;
      }

      table {
        width: 100%;
      }

      td {}

      td:first-child div {
        margin: 0;
      }

      td:first-child {
        text-align: center;
      }

      td:last-child {
        padding-left: 10px;
      }
    </style>
  </head>
  <body>
    <table>
      <tr>
        <td width="30%">
          <img src="<%= item_image %>" width="100%" />
          <div><%= item_sku %></div>
        </td>
        <td>
          <div><%= item_name %></div>
          <div><label>Location:</label> <%= item_location %></div>
          <div><label>Pick QTY:</label> <%= item_quantity %></div>
          <div><label>Shelf:</label> <%= shelf %></div>
          <div><label>Order #:</label> <%= order_number %></div>

          <img src="data:image/png;base64,<%= encoded_number %>"/>
        </td>
      </tr>
    </table>
  </body>
</html>